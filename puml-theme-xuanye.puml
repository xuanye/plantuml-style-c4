!include ./colors.puml

!$THEME = "xuanye"

'!$BGCOLOR = "#f5f5f5"

!if %not(%variable_exists("$BGCOLOR"))
!$BGCOLOR = "transparent"
!endif


skinparam backgroundColor $BGCOLOR
skinparam useBetaStyle false






!$PRIMARY_TEXT = $GRAY_100
!$PRIMARY_BG_LIGHT = $CYAN_10
!$PRIMARY_BG = $CYAN_20
!$PRIMARY_BORDER_LIGHT = $CYAN_30
!$PRIMARY_BORDER = $CYAN_40


!$SECONDARY_TEXT = $GRAY_100
!$SECONDARY_BG_LIGHT = $ORANGE_10
!$SECONDARY_BG = $ORANGE_20
!$SECONDARY_BORDER = $ORANGE_30




!$SUCCESS = $GREEN_50
!$WARNING = $ORANGE_80
!$DANGER  = $RED_50

!$ARROW_COLOR = $GRAY_50
!$START_COLOR = $GREEN_50
!$END_COLOR   = $RED_50

!$LIFE_LINE_BORDER_COLOR = $GREEN_50

!$BORDER_THICKNESS = 1


!procedure $success($msg)
  <font color=$SUCCESS><b>$msg
!endprocedure

!procedure $failure($msg)
  <font color=$DANGER><b>$msg
!endprocedure

!procedure $warning($msg)
  <font color=$WARNING><b>$msg
!endprocedure

!procedure $primary_scheme()
	FontColor $PRIMARY_TEXT
	BorderColor $PRIMARY_BORDER
	BackgroundColor $PRIMARY_BG_LIGHT
	RoundCorner 0
!endprocedure



!procedure GRAY_ARROW()
 	skinparam ArrowColor  $GRAY_50
!endprocedure
!procedure BLUE_ARROW()
 	skinparam ArrowColor  $CYAN_50
!endprocedure

!procedure RED_ARROW()
 	skinparam ArrowColor  $RED_50
!endprocedure

!procedure GREEN_ARROW()
 	skinparam ArrowColor  $GREEN_20
!endprocedure
''
'' Global Default Values
''
skinparam defaultFontName       "-apple-system,BlinkMacSystemFont,'Segoe UI',Roboto,'Helvetica Neue',Arial,sans-serif"
skinparam defaultFontSize        12
'skinparam dpi                    125
skinparam shadowing              false
skinparam roundcorner            5
skinparam ParticipantPadding     10
skinparam BoxPadding             10
skinparam Padding                4
skinparam ArrowColor             $ARROW_COLOR





!startsub interface

skinparam interface {
	$primary_scheme()	
}
!endsub

!startsub class

skinparam class {

	$primary_scheme()	
	HeaderBackgroundColor $PRIMARY_BG_LIGHT
	StereotypeFontColor $PRIMARY_TEXT

	StereotypeFontSize 9
	BorderThickness $BORDER_THICKNESS
	AttributeFontColor $PRIMARY_TEXT
	AttributeFontSize 10	
	'AttributeIconSize 8
}
!endsub


!startsub activity
skinparam activity {

	$primary_scheme()

    StartColor $START_COLOR
    EndColor $END_COLOR
    AttributeFontColor $PRIMARY_TEXT
    AttributeFontSize  12

    BackgroundColor $PRIMARY_BG
    BorderColor $PRIMARY_BORDER

    DiamondBackgroundColor  $SECONDARY_BG_LIGHT
    DiamondBorderColor    $SECONDARY_BORDER
    'DiamondFontColor
    'DiamondFontName
    'DiamondFontSize
    'DiamondFontStyle

    'FontColor
    'FontName
    'FontSize
    'FontStyle

}
!endsub


!startsub state
skinparam State {
    $primary_scheme()

    StartColor $START_COLOR
    EndColor $END_COLOR
    AttributeFontColor $PRIMARY_TEXT
    AttributeFontSize  12

    BackgroundColor $PRIMARY_BG
    BorderColor $PRIMARY_BORDER
}
!endsub

!startsub sequence
skinparam sequence {
	$primary_scheme()
    'ArrowThickness 1
    'ArrowColor Red
    ActorBorderThickness 1
    LifeLineBorderColor $LIFE_LINE_BORDER_COLOR
    ParticipantBorderThickness 1  
	ParticipantBackgroundColor $PRIMARY_BG
	ParticipantBorderColor $PRIMARY_BORDER
    'GroupBodyBackgroundColor
    GroupBorderThickness 1
    GroupBorderColor $PRIMARY_BORDER_LIGHT
    GroupBackgroundColor $PRIMARY_BG_LIGHT
}
!endsub

!startsub actor

skinparam actor {
	$primary_scheme()
    BackgroundColor $PRIMARY_BG
    BorderColor $PRIMARY_BORDER
    Shadowing false
}
!endsub


!startsub usecase

skinparam usecase {
	$primary_scheme()
    BackgroundColor $PRIMARY_BG_LIGHT
    BorderColor $PRIMARY_BORDER   
    ActorBackgroundColor $PRIMARY_BG
    ActorBorderColor $PRIMARY_BORDER
    ActorShadowing false 
}

skinparam rectangle<<usercase>> {    
    StereotypeFontSize 0
    FontColor $PRIMARY_TEXT
    BorderColor $PRIMARY_BORDER
    BorderStyle dashed
    BackgroundColor $PRIMARY_BG_LIGHT
}
!endsub

